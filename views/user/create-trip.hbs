<div class="create-event-form">
  {{#if userInSession}}
    <h2>Welcome, {{userInSession.email}}!</h2>
    <h3>Tell us about your trip.</h3>
    <form action="/add-trip" method="POST" enctype="multipart/form-data">
      <label for="">
        Trip Name
        <input type="text" name="tripName" />
      </label>
      <label for="">
        Describe your trip
        <textarea
          name="description"
          rows="5"
          cols="30"
          placeholder="Enter description"
        ></textarea>
      </label>
      <label for="">
        Image
        <input type="file" name="image" />
      </label>
      <button type="submit">Add Trip</button>
    </form>

  {{else}}
    <p>Still no logged in user, sorry!</p>
  {{/if}}
  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
</div>